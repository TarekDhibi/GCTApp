<Window x:Class="GCTApplication.Gestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" VerticalAlignment="Center" Background="Transparent">
            <Menu Background="Transparent">
                <MenuItem Background="Transparent" Header="Fichier">
                    <MenuItem Background="White" Header="Nouveau" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Background="White" Header="Déconnexion" Click="MenuItem_Click_1"></MenuItem>
                    <MenuItem Background="White" Header="Quitter" Click="MenuItem_Click_2"></MenuItem>
                </MenuItem>
                <MenuItem Background="Transparent" Header="Personel">
                    <MenuItem Background="White" Header="Afficher La liste des personels" Click="MenuItem_Click_3"></MenuItem>
                    <MenuItem Background="White" Header="Ajouter un personel"></MenuItem>
                    <MenuItem Background="White" Header="Modifier un personel"></MenuItem>
                    <MenuItem Background="White" Header="Supprimer un personel"></MenuItem>
                </MenuItem>
            </Menu>
        </Grid>
    </Grid>
</Window>
